  "mcpServers": {
    "kong-mesh": {
      "command": "npx",
      "args": [
        "-y",
        "sitemcp",
        "https://developer.konghq.com/",
        "-m",
        "/mesh/**",
        "-m",
        "/mesh-manager/**",
        "--concurrency",
        "20"
      ],
      "env": {
        "XDG_CACHE_HOME": "{{ user.home }}/Documents/Kong/My-drive/Docs/Mcp/mesh/.cache"
      }
    }
  }
}
