// Zellij Configuration
// Generated by Ansible - DO NOT EDIT MANUALLY

// Theme - using ansi to follow terminal colors (COSMIC theme)
theme "{{ zellij_theme }}"

// Default shell
default_shell "{{ user.shell }}"

// Scrollback editor
scrollback_editor "{{ zellij_scrollback_editor }}"

// Clipboard settings
copy_on_select {{ zellij_copy_on_select | lower }}
copy_command "{{ zellij_copy_command }}"
copy_clipboard "{{ zellij_copy_clipboard }}"

// Buffer settings
scroll_buffer_size {{ zellij_scroll_buffer_size }}

// Display settings
mouse_mode {{ zellij_mouse_mode | lower }}
default_mode "{{ zellij_default_mode }}"
show_startup_tips {{ zellij_show_startup_tips | lower }}
default_layout "{{ zellij_default_layout }}"
pane_frames {{ zellij_pane_frames | lower }}

// UI configuration
ui {
    pane_frames {
        hide_session_name {{ zellij_ui_pane_frames_hide_session_name | lower }}
    }
}

// Compact layout definition
layouts {
    compact {
        tab_template {
            children
            pane borderless=true
        }
        pane_template {
            children
            pane borderless=true
        }
    }
}

// Plugins - using tab-bar to show keyboard shortcuts
plugins {
    tab-bar location="zellij:tab-bar"
    status-bar location="zellij:status-bar"
}
