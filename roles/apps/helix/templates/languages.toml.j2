# Helix Language Server Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

{% for lang in helix_languages %}
[[language]]
name = "{{ lang.name }}"
{% if lang.auto_format is defined %}
auto-format = {{ lang.auto_format | lower }}
{% endif %}
{% if lang.formatter_command is defined %}
formatter = { command = "{{ lang.formatter_command }}" }
{% endif %}
{% if lang.language_servers is defined %}
language-servers = {{ lang.language_servers | to_json }}
{% endif %}

{% endfor %}

# Language Server Definitions
[language-server.yaml-language-server]
command = "yaml-language-server"
args = ["--stdio"]

[language-server.gopls]
command = "gopls"

[language-server.golangci-lint-langserver]
command = "golangci-lint-langserver"

[language-server.marksman]
command = "marksman"
args = ["server"]
