#!/usr/bin/env bash
# ncspot-session - Launch or resume ncspot in a dedicated zellij session
# Managed by Ansible - spotify role

SESSION_NAME="music"
LAYOUT_FILE="{{ user.home }}/.config/zellij/layouts/ncspot.kdl"

# Attach to session if it exists, create with layout if it doesn't
exec zellij --layout "$LAYOUT_FILE" attach --create "$SESSION_NAME"
