# Terminal Experience - Enhanced CLI tools configuration
# Managed by Ansible - Do not edit manually

# COSMIC theme state - expose system dark/light mode
set -l cosmic_is_dark_file ~/.config/cosmic/com.system76.CosmicTheme.Mode/v1/is_dark
if test -f $cosmic_is_dark_file
    set -gx COSMIC_IS_DARK (cat $cosmic_is_dark_file)
else
    set -gx COSMIC_IS_DARK false
end

# bat configuration
# Use bat for colorized man pages
set -x MANPAGER "sh -c 'col -bx | bat -l man -p'"

# bathelp function - colorize help output
function bathelp
    "$argv" --help 2>&1 | bat --plain --language=help
end

# fzf + bat integration - file preview
set -x FZF_DEFAULT_OPTS "--preview 'bat --color=always --style=numbers --line-range=:500 {}'"

# fzf + fd integration - use fd for file search
if type -q fd
    set -x FZF_DEFAULT_COMMAND 'fd --type f --hidden --follow --exclude .git'
    set -x FZF_CTRL_T_COMMAND "$FZF_DEFAULT_COMMAND"
end
