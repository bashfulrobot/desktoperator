# Trippy configuration file
# https://trippy.rs/reference/configuration/
# Generated by Ansible desktoperator

# Strategy - Tracing protocol settings
[strategy]
# Default protocol: ICMP
protocol = "icmp"

# Maximum hops to trace
max-ttl = 64

# Starting TTL
first-ttl = 1

# Number of concurrent probes in-flight
max-inflight = 24

# Initial sequence number
initial-sequence = 33000

# Grace duration to wait for final responses
grace-duration = "100ms"

# Minimum time to wait between rounds
min-round-duration = "1s"

# Maximum time to wait between rounds
max-round-duration = "1s"

# Read timeout for receiving responses
read-timeout = "10ms"

# Maximum number of samples per hop
max-samples = 256

# Packet size in bytes
packet-size = 84

# DNS resolver
[dns]
# Use system resolver by default
dns-resolve-method = "system"

# Timeout for DNS resolution
dns-timeout = "5s"

# TTL for DNS cache entries
dns-ttl = "300s"

# TUI settings
[tui]
# Custom columns: Host, Loss%, Snt, Avg, Best, Wrst, StDev, Ttl
# Add S (Seq), P (Sprt), Q (Dprt) for multipath analysis
tui-custom-columns = "hosavbwdt"

# Refresh rate (duration string)
tui-refresh-rate = "100ms"

# Address mode: show IP addresses
tui-address-mode = "both"

# Maximum addresses to display per hop (0 = auto)
tui-max-addrs = 0

# Preserve screen on exit
tui-preserve-screen = false

# Reporting
[report]
# Number of report cycles when using --mode pretty/markdown/csv/json
report-cycles = 10
