  "tokenColors": [
    {
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "{{ colors.text_secondary.hex }}",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "comment.block.documentation"
      ],
      "settings": {
        "foreground": "{{ colors.success.hex }}",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "constant",
        "entity.name.constant",
        "variable.other.constant",
        "variable.language"
      ],
      "settings": {
        "foreground": "{{ colors.warning.hex }}"
      }
    },
    {
      "scope": [
        "entity",
        "entity.name"
      ],
      "settings": {
        "foreground": "{{ colors.warning.hex }}"
      }
    },
    {
      "scope": "variable.parameter.function",
      "settings": {
        "foreground": "{{ colors.primary.hex }}"
      }
    },
    {
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "{{ colors.destructive.hex }}"
      }
    },
    {
      "scope": "keyword",
      "settings": {
        "foreground": "{{ colors.accent.hex }}"
      }
    },
    {
      "scope": [
        "storage",
        "storage.type"
      ],
      "settings": {
        "foreground": "{{ colors.accent.hex }}"
      }
    },
    {
      "scope": [
        "string",
        "punctuation.definition.string"
      ],
      "settings": {
        "foreground": "{{ colors.success.hex }}"
      }
    },
    {
      "scope": "support",
      "settings": {
        "foreground": "{{ colors.success.hex }}"
      }
    },
    {
      "scope": "meta.property-name",
      "settings": {
        "foreground": "{{ colors.accent.hex }}"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "{{ colors.destructive.hex }}"
      }
    },
    {
      "scope": "variable.other",
      "settings": {
        "foreground": "{{ colors.primary.hex }}"
      }
    },
    {
      "scope": [
        "invalid.broken",
        "invalid.deprecated",
        "invalid.illegal",
        "invalid.unimplemented"
      ],
      "settings": {
        "foreground": "{{ colors.destructive.hex }}"
      }
    },
    {
      "scope": "message.error",
      "settings": {
        "foreground": "{{ colors.destructive.hex }}"
      }
    },
    {
      "scope": [
        "markup.heading",
        "markup.heading entity.name"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "{{ colors.accent.hex }}"
      }
    },
    {
      "scope": "markup.quote",
      "settings": {
        "foreground": "{{ colors.warning.hex }}"
      }
    },
    {
      "scope": "markup.italic",
      "settings": {
        "fontStyle": "italic",
        "foreground": "{{ colors.primary.hex }}"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "fontStyle": "bold",
        "foreground": "{{ colors.primary.hex }}"
      }
    },
    {
      "scope": "markup.raw",
      "settings": {
        "foreground": "{{ colors.success.hex }}"
      }
    },
    {
      "scope": [
        "markup.deleted",
        "meta.diff.header.from-file"
      ],
      "settings": {
        "foreground": "{{ colors.destructive.hex }}"
      }
    },
    {
      "scope": [
        "markup.inserted",
        "meta.diff.header.to-file"
      ],
      "settings": {
        "foreground": "{{ colors.success.hex }}"
      }
    },
    {
      "scope": [
        "markup.changed"
      ],
      "settings": {
        "foreground": "{{ colors.warning.hex }}"
      }
    }
  ],
  "semanticHighlighting": true
}
