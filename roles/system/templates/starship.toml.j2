add_newline = false
command_timeout = 300
format = "$custom$character"
palette = "base16"
right_format = "$all"

[aws]
disabled = true

[character]
error_symbol = "[](bold)"
success_symbol = "[](bold)"

[cmd_duration]
format = "took [$duration]($style) "
min_time = 500

[container]
disabled = true

[custom.env]
command = "cat /etc/prompt"
format = "$output "
ignore_timeout = true
shell = "fish"
when = "test -f /etc/prompt"

[deno]
format = "[$symbol]($style)"
symbol = " "

[directory]
format = "[$repo_root]($repo_root_style)[$path]($style)[$read_only]($read_only_style) "
read_only = " "
repo_root_style = "bold"
truncation_length = 2
truncation_symbol = "…/"

[docker_context]
format = "[$symbol]($style)"
symbol = " "

[gcloud]
disabled = true

[git_branch]
format = "[$symbol$branch]($style) "
style = "italic"
symbol = " "

[git_status]
ahead = "⇡${count} "
behind = "⇣${count} "
conflicted = " "
deleted = "✘ "
diverged = "⇕⇡${ahead_count}⇣${behind_count} "
format = "[$all_status]($style)"
modified = " "
renamed = "» "
staged = "+ "
untracked = "? "
up_to_date = " "

[golang]
format = "[$symbol]($style)"
symbol = " "

