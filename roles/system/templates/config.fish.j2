# Fish shell configuration
# Managed by Ansible - changes may be overwritten

# Set PATH
set -gx PATH $HOME/.local/bin $HOME/bin $PATH

# Editor
set -gx EDITOR vim

# Disable greeting
set fish_greeting

# Aliases
alias ll 'ls -lah'
alias g 'git'
alias k 'kubectl'
alias d 'docker'

# Ansible environment
if test -d $HOME/dev/iac/desktoperator
    set -gx ANSIBLE_CONFIG $HOME/dev/iac/desktoperator/ansible.cfg
end

# Initialize starship prompt
if type -q starship
    starship init fish | source
end
